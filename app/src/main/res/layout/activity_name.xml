<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_backgroud"
    tools:context=".NameActivity">


    <soup.neumorphism.NeumorphButton
        android:id="@+id/button2"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@id/card1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lato_black"
        android:gravity="center"
        android:text="Continue"
        android:textColor="@color/red"
        android:textSize="18dp"
        app:neumorph_shadowColorDark="#9A9696" />


    <soup.neumorphism.NeumorphCardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:neumorph_shapeType="basin">

        <EditText
            android:id="@+id/player_name_ai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="32dp"
            android:layout_centerInParent="true"
            android:paddingHorizontal="2dp"
            android:paddingVertical="8dp"
            android:background="@drawable/no_background"
            android:hint="Nickname"
            android:fontFamily="@font/lato_bold"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/black1"
            android:textColorHint="#6A575757"
            android:theme="@style/TextLabel"
            android:textCursorDrawable="@drawable/curser">
        </EditText>

    </soup.neumorphism.NeumorphCardView>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:text="Enter your Name"
        android:layout_marginTop="275dp"
        android:fontFamily="@font/lato_bold"
        android:textColor="#000000"
        android:textSize="25sp" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="196dp"
        android:layout_height="199dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ele3" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="271dp"
        android:layout_height="194dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitEnd"
        android:src="@drawable/rbt" />

</RelativeLayout>